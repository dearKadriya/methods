{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "max-classes-per-file": ["error", 7],
        "no-new": 0,
        "import/no-unresolved": [
            2,
            { "caseSensitive": false }
        ]
    }
}
